<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sign Up</title>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Quicksand&display=swap');
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Quicksand', sans-serif;
    }

    body {
      height: 100vh;
      background-image: url(https://raw.githubusercontent.com/CiurescuP/LogIn-Form/main/bg.jpg);
      background-size: cover;
      background-repeat: no-repeat;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    form {
      width: 450px;
      background-color: rgba(255, 255, 255, 0.13);
      border-radius: 17px;
      backdrop-filter: blur(5px);
      border: 5px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 0 40px rgba(129, 236, 174, 0.6);
      padding: 30px;
      color: #fff;
    }

    form h3 {
      text-align: center;
      font-size: 36px;
      margin-bottom: 20px;
    }

    label {
      font-size: 18px;
      font-weight: 600;
      margin-top: 20px;
      display: block;
    }

    input {
      width: 100%;
      padding: 10px;
      margin-top: 10px;
      margin-bottom: 15px;
      background: rgba(0, 0, 0, 0.22);
      border: 2px solid #38363654;
      border-radius: 5px;
      color: #fff;
    }

    input:focus {
      background: #434343;
      outline: none;
      box-shadow: 0 0 5px #629677;
    }

    button[type="submit"] {
      margin-top: 20px;
      width: 100%;
      background: rgba(0, 0, 0, 0.22);
      border: 2px solid #38363654;
      border-radius: 5px;
      color: #fff;
      padding: 10px;
      font-size: 18px;
      font-weight: 600;
      cursor: pointer;
    }

    button[type="submit"]:hover {
      background: #629677;
    }

    .error {
      color: red;
      text-align: center;
      margin-top: 10px;
      margin-bottom: 10px;
    }

    .login-link {
      text-align: center;
      margin-top: 15px;
      font-size: 14px;
    }

    .login-link a {
      color: #fff;
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <form action="/auth/signup" method="POST">
    <h3>Sign Up</h3>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <label for="username">Username</label>
    <input type="text" id="username" name="username" required>

    <label for="email">Email</label>
    <input type="email" id="email" name="email" required>

    <label for="password">Password</label>
    <input type="password" id="password" name="password" required>

    <button type="submit">Sign Up</button>

    <p class="login-link">
      Already have an account? <a href="/auth/login">Login</a>
    </p>
  </form>
  <script>
    const form = document.querySelector('form');
    const passwordInput = document.getElementById('password');
  
    form.addEventListener('submit', function (e) {
      const password = passwordInput.value;
      const regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^a-zA-Z0-9]).{8,}$/;
  
      if (!regex.test(password)) {
        e.preventDefault(); 
        alert("Mật khẩu phải có ít nhất 8 ký tự, gồm chữ thường, chữ hoa, số và ký tự đặc biệt!");
        passwordInput.focus();
      }
    });
  </script>
</body>
</html>
