<%- include('../partials/header') %>

<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    background: linear-gradient(to right, #f1f8e9, #e0f7fa);
    margin: 0;
    padding: 0;
  }

  .edit-container {
    max-width: 600px;
    margin: 50px auto;
    padding: 30px;
    background-color: white;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .edit-container h2 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
  }

  form label {
    font-weight: bold;
    display: block;
    margin-bottom: 6px;
    color: #555;
  }

  form input[type="text"],
  form input[type="file"] {
    width: 100%;
    padding: 10px 12px;
    margin-bottom: 20px;
    border: 1px solid #ccc;
    border-radius: 10px;
    transition: border-color 0.3s;
  }

  form input[type="text"]:focus {
    border-color: #007BFF;
    outline: none;
  }

  button {
    width: 100%;
    padding: 12px;
    background-color: #007BFF;
    color: white;
    border: none;
    font-weight: bold;
    border-radius: 10px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  button:hover {
    background-color: #0056b3;
  }

  .preview-img {
    display: block;
    margin: 0 auto 20px;
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
  }

  .back-link {
    display: block;
    text-align: center;
    margin-top: 20px;
    color: #007BFF;
    text-decoration: none;
  }

  .back-link:hover {
    text-decoration: underline;
  }
</style>

<div class="edit-container">
  <h2>Sửa banner</h2>

  <form action="/banners/view/edit/<%= banner._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <label>URL hình ảnh (hoặc chọn ảnh bên dưới):</label>
    <input type="text" name="img_url" id="img_url" value="<%= banner.img_url %>" placeholder="https://example.com/image.jpg">

    <label>Hoặc chọn ảnh từ máy:</label>
    <input type="file" name="imageFile" id="imageFile" accept="image/*">

    <img id="preview" class="preview-img" src="<%= banner.img_url %>" alt="Xem trước ảnh">

    <label>Tiêu đề:</label>
    <input type="text" name="title" value="<%= banner.title %>">

    <button type="submit">Cập nhật</button>
  </form>

  <a href="/banners/view/all" class="back-link">⬅️ Quay lại danh sách</a>
</div>

<script>
  const fileInput = document.getElementById('imageFile');
  const urlInput = document.getElementById('img_url');
  const preview = document.getElementById('preview');

  fileInput.addEventListener('change', function () {
    const file = fileInput.files[0];
    if (file) {
      preview.src = URL.createObjectURL(file);
      urlInput.value = ""; // clear URL nếu người dùng chọn ảnh từ máy
    }
  });

  urlInput.addEventListener('input', function () {
    preview.src = urlInput.value;
    fileInput.value = ""; // clear file nếu người dùng nhập URL
  });
</script>

<%- include('../partials/footer') %>
