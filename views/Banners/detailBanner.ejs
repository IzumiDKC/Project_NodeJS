<%- include('../partials/header') %>

<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    background: linear-gradient(to right, #e0f7fa, #f9fbe7);
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 800px;
    margin: 40px auto;
    padding: 30px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .container h2 {
    margin-bottom: 20px;
    color: #333;
  }

  .banner-image {
    max-width: 100%;
    max-height: 400px;
    border-radius: 12px;
    object-fit: cover;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    margin-bottom: 20px;
    transition: transform 0.4s ease;
  }

  .banner-image:hover {
    transform: scale(1.03);
  }

  .info {
    text-align: left;
    margin: 20px auto;
    font-size: 16px;
    color: #444;
    line-height: 1.6;
  }

  .info h3 {
    color: #007BFF;
    margin-bottom: 10px;
  }

  .back-link {
    display: inline-block;
    margin-top: 30px;
    text-decoration: none;
    color: #007BFF;
    font-weight: bold;
    border: 1px solid #007BFF;
    padding: 8px 16px;
    border-radius: 8px;
    transition: background-color 0.3s, color 0.3s;
  }

  .back-link:hover {
    background-color: #007BFF;
    color: white;
  }
</style>

<div class="container">
  <h2>Chi tiết Banner</h2>

  <img src="<%= banner.img_url %>" alt="Banner" class="banner-image" />

  <div class="info">
    <h3>Tiêu đề: <%= banner.title || 'Không có' %></h3>
    <p><strong>ID:</strong> <%= banner._id %></p>
    <p><strong>Ngày tạo:</strong> <%= banner.createdAt.toLocaleString() %></p>
  </div>

  <a href="/banners/view/all" class="back-link">⬅️ Quay lại danh sách</a>
</div>

<%- include('../partials/footer') %>
