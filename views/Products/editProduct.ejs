<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Product</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f0f6fb;
      padding: 40px;
      color: #333;
    }

    h1 {
      text-align: center;
      color: #0077b6;
    }

    form {
      max-width: 600px;
      margin: 0 auto;
      padding: 30px;
      background-color: white;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    label {
      display: block;
      margin-bottom: 6px;
      font-weight: bold;
    }

    input[type="text"],
    input[type="number"],
    select,
    textarea {
      width: 100%;
      padding: 10px;
      margin-bottom: 20px;
      border: 1px solid #ccc;
      border-radius: 6px;
      box-sizing: border-box;
      font-size: 16px;
    }

    textarea {
      height: 100px;
      resize: vertical;
    }

    button {
      display: inline-block;
      width: 100%;
      background-color: #00b4d8;
      color: white;
      border: none;
      padding: 12px;
      font-size: 16px;
      font-weight: bold;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    button:hover {
      background-color: #0096c7;
    }
  </style>
</head>
<body>
  <%- include('../partials/header') %>

  <h1>Edit Product</h1>

  <form action="/products/<%= product._id %>" method="POST">
    <input type="hidden" name="_method" value="PUT">

    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" value="<%= product.name %>" required>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="<%= product.price %>" required>

    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity" value="<%= product.quantity %>" required>

    <label for="category">Category:</label>
    <select name="category" id="category" required>
      <% categories.forEach(function(category) { %>
        <option value="<%= category._id %>" <%= category._id == product.category._id ? 'selected' : '' %>>
          <%= category.name %>
        </option>
      <% }) %>
    </select>

    <label for="description">Description:</label>
    <textarea id="description" name="description"><%= product.description %></textarea>

    <label for="urlImg">Image URL:</label>
    <input type="text" id="urlImg" name="urlImg" value="<%= product.urlImg %>">

    <button type="submit">Save Changes</button>
  </form>

</body>
</html>
